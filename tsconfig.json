{
  "references": [
    {
      "path": "./tsconfig.next.json"
    },
    {
      "path": "./tsconfig.bun.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@components/*": ["components/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@lionbot/*": ["lionbot/*"],
      "@app/*": ["app/*"],
      "@db/*": ["db/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "out"]
}
